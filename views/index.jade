extends layout

block content
  .container
    table.table
      thead
        tr
          th 赛事
          th 时间
          th 状态
          th [排名] 主队
          th 比分
          th 客队[排名]
          th 半场
          th 赔率
          th 数据
      tbody
        
        for single in result
          tr
            td #{single.league}
            td #{single.date.substr(0,5)}日#{single.date.substr(5,5)}
            td #{single.isFinished}
            td #{single.home}
            td #{single.score}
            td #{single.away}
            td #{single.halftime}
            td 
              span #{single.win} /
              span #{single.even} /
              span #{single.lose}
            td 
              a(href='odds?match_id=#{single.match_id}', target='_blank') #{single.euro}
              b  / 
              a(href='/') #{single.analysis}
